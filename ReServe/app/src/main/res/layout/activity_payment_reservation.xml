<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Payment_reservation"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:scaleType= "fitCenter"
            android:adjustViewBounds= "true"
            android:src="@drawable/ic_arrow_back_black_24dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/top_name"/>
    </LinearLayout>
    <ImageView
        android:layout_width="400dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/bar"/>
    <TextView
        android:id="@+id/store_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="할리스 커피"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_marginLeft="35dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="메뉴 선택"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"/>
    <ListView
        android:id="@+id/menu_list"
        android:layout_width="330dp"
        android:layout_height="230dp"
        android:layout_gravity="center_horizontal"
        android:scrollbarSize="3dp"
        tools:listitem="@layout/menu_item">

    </ListView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="결제금액"
        android:textSize="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="9800"
            android:textSize="50sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="원"
            android:textSize="20dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="총 결제 금액"
        android:textSize="15dp"
        android:layout_marginLeft="35dp"/>

        <TextView
            android:id="@+id/need_cash"
            android:text="9800"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="원"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="남은 잔액"
            android:textSize="15dp"
            android:layout_marginLeft="35dp"/>

        <TextView
            android:id="@+id/remain_cash"
            android:text="10200"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="원"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"/>

        <Button
            android:id="@+id/reverse"
            android:text="예약하기"
            android:textSize="25dp"
            android:textColor="#FF4545"
            android:layout_marginLeft="50dp"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:background="@drawable/reverse_btn"/>
    </LinearLayout>
    <ImageView
        android:layout_width="400dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/bar"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:text="※ 결제 후 30 분 이내에 매장에 방문하지 않으시면 결제가 취소됩니다. 예약후 취소가 불가능합니다"/>

</LinearLayout>