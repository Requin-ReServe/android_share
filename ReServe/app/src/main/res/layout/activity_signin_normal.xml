<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@drawable/login_back"
    android:orientation="vertical">

    <TextView
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:background="@drawable/top_logo_fix"
        android:layout_marginTop="25dp"
        android:layout_gravity="center_horizontal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textSize="48dp"
        android:textColor="#ffffff"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="45dp"
        android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 일반회원"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:layout_marginTop="100dp"/>
    </LinearLayout>
    <EditText
        android:id="@+id/signin_id"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:hint="   아이디를 입력하세요"
        android:textColorHint="#FFFFFF"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_round"/>
    <EditText
        android:id="@+id/signin_pw"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:hint="   비밀번호를 입력하세요"
        android:textColorHint="#FFFFFF"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_round"/>
    <EditText
        android:id="@+id/signin_pw_check"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:hint="   비밀번호를 다시 입력하세요"
        android:textColorHint="#FFFFFF"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_round"/>
    <EditText
        android:id="@+id/phonenum"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:hint="   휴대폰 번호를 입력하세요"
        android:textColorHint="#FFFFFF"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_round"/>
    <EditText
        android:id="@+id/nick"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:hint="   닉네임을 입력하세요"
        android:textColorHint="#FFFFFF"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_round"/>
    <Button
        android:id="@+id/normal_signin_complete"
        android:layout_width="170dp"
        android:layout_height="45dp"
        android:text="일반회원가입"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:layout_marginTop="35dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/login_btn"/>
</LinearLayout>